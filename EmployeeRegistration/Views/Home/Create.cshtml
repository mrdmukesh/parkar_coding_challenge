@model RegisterViewModel

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/themes/base/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container register">
        <form asp-controller="Home" asp-action="Create" method="post">
            <div asp-vlidation-summary="All" class="text-danger"></div>
            <div class="row">
               
                <div class="row register-form">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name *" value="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name *" value="">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="maxl">
                                <label class="radio inline">
                                    <input type="radio" name="gender" value="male" checked="">
                                    <span> Male </span>
                                </label>
                                <label class="radio inline">
                                    <input type="radio" name="gender" value="female">
                                    <span>Female </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Your Email *" value="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Phone" type="text" minlength="10" maxlength="10" name="txtEmpPhone" class="form-control" placeholder="Your Phone *" value="">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                       
                    </div>
                    
                    <input type="submit" class="btnRegister" value="Register" width="70" height="40" >
                </div>
                            </div>
                       
                 
        </form>
    </div>
    <script type="text/javascript"></script>
</body>
</html>